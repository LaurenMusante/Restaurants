@using Restaurants.Models
@model List<Restaurants.Models.Restaurant>

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <title>Your Saved Restaurants</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        @if (@Model.Count == 0)
        {
        <h3>No restaurants have been added yet!</h3>
        } 

        <ul>
            @foreach (Restaurant restaurant in Model)
            {
              <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.Id }) </li>
            }
        </ul>

        <p>@Html.ActionLink("Add new restaurant", "Create")</p>
        <p>@Html.ActionLink("Home", "Index", "Home")</p>
    </div>
</body>
</html>